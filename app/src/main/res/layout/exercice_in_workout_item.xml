<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/WorkoutRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="1dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ExerciseIV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="1dp"
            android:background="@color/black"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#F4CAC7"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ExerciseNameTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:paddingStart="4dp"
                    android:autoSizeTextType="uniform"
                    android:lines="1"
                    android:text="Bench Press" />

                <TextView
                    android:id="@+id/MusclesTargetsTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:padding="1dp"
                    android:autoSizeTextType="uniform"
                    android:lines="1"
                    android:text="(Pectorales>Tricets>Hombros)" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="#BDF0F6"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/SeriesTV"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:text="Series"
                        android:padding="1dp" />

                    <TextView
                        android:id="@+id/SeriesQtyTV"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:text="3"
                        android:padding="2dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/RepetitionsTV"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:text="Repetitions"
                        android:padding="1dp" />

                    <TextView
                        android:id="@+id/RepetitionsQtyTV"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:text="10"
                        android:padding="1dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/WeightTV"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:text="Weight (lbs)"
                        android:padding="1dp" />

                    <TextView
                        android:id="@+id/WeightNumTV"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:text="45"
                        android:padding="1dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
